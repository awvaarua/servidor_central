<% if(tipo == 1){ %>
    <div class="panel-group accionpanel" id="panel<%= posicion %>">
        <div class="panel panel-default">
            <div class="panel-heading scriptheading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse0">
                        <strong><%= script.nombre %></strong>
                        <strong class="pull-right"><%= nodo.nombre %></strong>                                    
                    </a>
                </h4>
            </div>
            <div id="collapse0" class="panel-collapse collapse in paddinalerta alertactionbody">
                <input id="script_id" hidden value="<%= script._id %>">
                <input id="script_fichero" hidden value="<%= script.fichero %>">
                <input id="script_comando" hidden value="<%= script.comando %>">
                <input id="script_nombre" hidden value="<%= script.nombre %>">
                <input id="mac" hidden value="<%= nodo.mac %>">                
                <input id="nodonombre" hidden value="<%= nodo.nombre %>">
                <div class="row argumentos">
                    <% script.argumentos.forEach(function(arg, i) { %>
                        <div class="col-lg-6 arg">
                            <div class="form-group">
                                <input id="arg_nombre" hidden value="<%= arg.nombre %>">
                                <input id="arg_orden" hidden value="<%= arg.orden %>">
                                <input id="arg_tipo" hidden value="<%= arg.tipo %>">
                                <label for="sel_sensor"><%= arg.nombre %></label>
                                <input id="valor" type="<%= arg.tipo %>" class="form-control argument" name="" placeholder=""></input>
                            </div>
                        </div>
                    <% }); %>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <span class="btn btn btn-danger delblanc pull-right eliminarAccion"><span class="glyphicon glyphicon-trash"></span> Eliminar</span>                                                                               
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } else{ %>
<div class="col-lg-12 accionalerta">
    <input id="script_id" hidden value="<%= script._id %>">
    <input id="script_comando" hidden value="<%= script.comando %>">
