<div class="panel-group accionpanel" id="panel<%= posicion %>">
    <div class="panel panel-default">
        <div class="panel-heading scriptheading">
            <h4 class="panel-title">
                <a data-toggle="collapse" href="#collapse0">
                    <strong><%= script.nombre %></strong>
                    <strong class="pull-right"><%= nodo.nombre %></strong>                                    
                </a>
            </h4>
        </div>
        <div id="collapse0" class="panel-collapse collapse in paddinalerta">
            <input id="<%= script._id %>" class="script_id" hidden>
            <input id="<%= script.fichero %>" class="script_fichero" hidden>
            <input id="<%= script.nombre %>" class="script_nombre" hidden>
            <div class="row">
                <% script.argumentos.forEach(function(arg, i) { %>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="sel_sensor"><%= arg.nombre %></label>
                            <input id="<%= arg.orden %>" type="<%= arg.tipo %>" class="form-control argument" name="" placeholder=""></input>
                        </div>
                    </div>
                <% }); %>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <span class="btn btn btn-danger delblanc pull-right eliminarAccion"><span class="glyphicon glyphicon-trash"></span> Eliminar</span>                                                                               
                </div>
            </div>
        </div>
    </div>
</div>