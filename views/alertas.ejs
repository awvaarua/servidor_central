<div class="general">
    <% alertas.forEach(function(alerta, i) { %>
        <div class="row">
            <div class="panel panel-primary alerta">
                <div class="panel-heading">
                    <h3 class="panel-title"><%= alerta.nodo.nombre %> - <%= alerta.fichero %></h3>
                </div>
                <div id="contenedor_alerta">
                    <div class="row">
                        <input id="alerta_id" value="<%= alerta._id %>" hidden>
                        <input id="alerta_tipo" value="<%= alerta.tipo %>" hidden>
                        <% if(alerta.tipo == 1) { %>
                            <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2 vcenter">
                                <h5><strong>Condición alerta</strong></h5>
                                <div class="input-group maxsize">
                                    <input id="alerta_condicion" type="text" class="form-control" value="<%= alerta.condicion %>">
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2 vcenter">
                                <h5><strong>Valor condición</strong></h5>
                                <div class="input-group maxsize">
                                    <input id="alerta_valor" type="text" class="form-control" value="<%= alerta.valor %>">
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2 vcenter">
                                <h5><strong>Frecuencia</strong></h5>
                                <div class="input-group maxsize">
                                    <input id="alerta_frecuencia" type="text" class="form-control" value="<%= alerta.frecuencia %>">
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <div class="row">
                        <div class="col-md-12 vcenter">
                            <h5><strong>Mensaje</strong></h5>
                            <div class="input-group maxsize">
                                <input id="alerta_mensaje" type="text" class="form-control" value="<%= alerta.mensaje %>">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2 vcenter">
                            <h5><strong>Listado de usuarios</strong></h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2 vcenter">
                            <div class="input-group maxsize sepusers">
                                <input id="adduser" type="text" class="form-control" placeholder="@ejemplo">
                                <span class="input-group-addon btn btn btn-success addblanc"><span class="glyphicon glyphicon-plus"></span></span>
                            </div>
                        </div>
                    </div>
                    <div id="usuer_list" class="row usuer_list">
                        <% alerta.usuarios.forEach(function(usuario, i) { %>
                            <div class="col-md-2 vcenter usuario">
                                <div class="input-group maxsize">
                                    <input id="al_usuario" type="text" class="form-control usuarioval" value="<%= usuario %>">
                                    <span class="input-group-addon btn btn btn-danger delblanc"><span class="glyphicon glyphicon-trash"></span></span>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <button type="button" class="btn btn-info btn-md adddelete actualizaralerta">
                                <span class="glyphicon glyphicon-refresh"></span> Actualizar
                            </button>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <div class="pull-right">
                                <button type="button" class="btn btn-danger btn-md pull-right adddelete eliminaralerta">
                                    <span class="glyphicon glyphicon-trash"></span> Eliminar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
</div>