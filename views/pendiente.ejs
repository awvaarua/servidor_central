<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-heading pendienteheading">
            <h4 class="panel-title">
                <strong>IP:</strong> <%= pendiente.ip %> <span class="pull-right"><strong>MAC:</strong> <%= pendiente.mac %></span>
            </h4>
        </div>
        <div id="parent" class="panel-body centered">
            <div id="responsecontent" class="col-sm-12 col-md-12 col-lg-12"></div>
            <div id="pendiente_comun" class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="sel_sensor">Nombre</label>
                        <input id="pendiente_nombre" type="text" class="form-control" name="nombre" placeholder="Nombre identificativo">
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="sel_sensor">Usuario</label>
                        <input id="pendiente_usuario" type="text" class="form-control" name="usuario" placeholder="usuario acceso SSH">
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="sel_sensor">Contrase単a</label>
                        <input id="pendiente_contrasenya" type="password" class="form-control" name="contrasenya" placeholder="Contrase単a acceso SSH">
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label for="sel_sensor">A単adir scripts</label>
                        <select id="select_scripts" class="form-control">
                            <option value="0">Seleccionar tipo de script</option>
                            <% scripts.forEach(function(script, i) { %>
                                <option value="<%= script.id %>"><%= script.nombre %></option>
                            <% }); %> 		
                        </select>
                    </div>
                </div>
            </div>
            <div id="pendiente_comun1" class="row">
                <div class="col-lg-3">
                    <div class="form-group">
                        <button type="button" onclick="PaintScriptid();" class="btn btn-success btn-md pull-right">
                            <span class="glyphicon glyphicon-plus"></span> A単adir
                        </button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="lista_scripts" class="col-lg-12">
                    <h3>Lista de scripts</h3>
                    
                </div>
            </div>
            <div id="botones" class="pull-right">
                <button type="button" onclick="SendConfirmation('<%= pendiente.ip %>', '<%= pendiente.mac %>');" class="btn btn-success btn-md pull-right adddelete">
                    <span class="glyphicon glyphicon-play"></span> Iniciar
                </button>
                <button type="button" class="btn btn-danger btn-md pull-right adddelete" onclick="DeleteNodoPendiente('<%= pendiente.mac %>');">
                    <span class="glyphicon glyphicon-trash"></span> Descartar
                </button>
            </div>
        </div>
    </div>
  </div>