<hr id="sep">
<div class="panel panel-default">
    <div class="panel-heading">
    	IP: <strong><%= nodo.ip %></strong>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="row">
            <div id="estado_nodo" class="col-md-3">
            	<h4>Estado</h4><img id="load_estado" src="/img/load1.gif"/>

            </div>
            <div class="col-md-4">
            	<h4>Tiempo online</h4>
                <div id="countdown" class="countdownHolder reloj hide">
                    <script type="text/javascript">getTime("<%= nodo.date %>");</script>
                </div>
            </div>
            <div class="col-md-4 col-md-offset-1">
            	<h4>Acciones</h4>
                <button type="button" class="btn btn-primary buttonnode" disabled="true">Reiniciar</button>
                <button type="button" class="btn btn-primary buttonnode" disabled="true">Pendiente</button>
                <button type="button" class="btn btn-danger buttonnode" disabled="true">Eliminar</button>
            </div>
        </div> 
        <hr id="sep1">
        <div class="row">
            <div class="col-md-12">
                <h2>Lista de scripts</h2>
            </div>
        </div>
        <div class="row">
            <div id="scriptscontainer" class="col-md-12">
                <% nodo.scripts.forEach(function(script, i) { %>
                    <div id="<%= script.pid %>" class="panel panel-default script">
                        <div class="panel-heading">
                            <strong><%= script.tipo %></strong><span id="load_estado_<%= script.pid %>" class="loadscript pull-right"><img src="/img/load1_small.gif"/></span>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-1 vcenter">
                                    <h5><strong>PID</strong></h5>
                                    <p><%= script.pid %></p>
                                </div>
                                <div class="col-md-2 vcenter">
                                    <h5><strong>Frecuencia</strong></h5>
                                    <div class="input-group">
                                      <input class="form-control" type="number" name="frec" value="<%= script.frec %>">
                                      <span class="input-group-btn">
                                        <button type="button" class="btn btn-info bt<%= script.pid %>" disabled="true">Actualizar</button>
                                      </span>
                                    </div>
                                </div>
                                <div class="col-md-4 col-md-offset-1 vcenter">
                                    <h5><strong>Pins</strong></h5>
                                    <div class="input-group">
                                      <input class="form-control" type="text" name="frec" value="">
                                      <span class="input-group-btn">
                                        <button type="button" class="btn btn-info bt<%= script.pid %>" disabled="true">Actualizar</button>
                                      </span>
                                    </div>
                                </div>
                                <div class="col-md-2 col-md-offset-2 vcenter">
                                    <h5><strong>Acciones</strong></h5>
                                    <button type="button" class="btn btn-danger" onclick='DeleteScriptNodo("<%= nodo.ip %>", "<%= script.pid %>");'>Eliminar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div> 
     </div>
    <!-- /.panel-body -->
</div>